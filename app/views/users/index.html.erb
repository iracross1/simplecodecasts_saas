<div class ="row">
  <div class ="col-md-8 col-md-offset-2">
    <h1>Dev Match Community</h1>
      <p>Welcome to the Dev Match community. Users must fill out a profile in order to be visible in the community.</p>
    <ul class="list-unstyled">
       <% @user.each do |usr| %>
     <% if usr.profile %>
    <li>
       <div class="well row <%= cycle('white-bg', '') %>">
         <div class ="col-sm-4 text-center">
    <% if usr.profile.avatar %>
       <%= link_to usr do %>
           <%= image_tag usr.profile.avatar.url(:thumb), class:'user-index-avatar' %>
        <% end %> 
           <% end %> 
         </div>
       <div>
          <%= link_to usr do %>
         <h2> <%=usr.profile.first_name %> <%=usr.profile.last_name %> </h2>
         <% end %> 
         <p><%= usr.profile.job_title %>
           <% if usr.plan_id ==2  %>
           <span class="label label-danger">PRO</span> </p>
         <% end %>
       </div>
      </div>
    </li>
       <% end %>
<% end %>
    </ul>

  </div>
</div>
